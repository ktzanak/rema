{
  "name": "rema",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "backend",
  "customizations": {
    "vscode": {
      "settings": {
        "git.path": "/usr/bin/git"
      },
      "extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode"]
    }
  },
  "workspaceFolder": "/app",
  "mounts": [
    "source=${localEnv:USERPROFILE}\\.ssh,target=/home/node/.ssh,type=bind,consistency=cached"
  ],
  "runServices": ["backend", "frontend"],
  "remoteEnv": {
    "GIT_SSH_COMMAND": "ssh -i /root/.ssh/id_rsa -o StrictHostKeyChecking=no -o IdentitiesOnly=yes"
  },
  "postCreateCommand": [
    "npm install && cd .. && cd rema-frontend && npm install && cd .."
  ]
}
